@model MatchBuddie.ViewModel.UserProfileViewModel
@using Microsoft.AspNetCore.Identity
@inject UserManager<User> UserManager
    <!--Every view gets the layout from the _ViewStart-->

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>

<partial name="_HeaderProfile" />

<div class="container">
    <div class="row">
        <partial name="_sideBarProfile" model="@Model" />
        <div class="col-6">
            <div class="card mb-3 bg-secondary text-white">
                <div class="card-body bg-secondary">
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9">
                            @Model.user.Firstname  @Model.user.Lastname
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9">
                            @Model.user.Email
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Preferences</h6>
                        </div>
                        <div class="col-sm-9">
                            @Model.user.Preference
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">From</h6>
                        </div>
                        <div class="col-sm-9">
                            @Model.user.City
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Description</h6>
                        </div>
                        <div class="col-sm-9">
                            @Model.user.Description
                        </div>
                    </div>
                </div>
            </div>
            <div class="card mt-3 bg-secondary">
                <div class="card-body">
                    <h3 class="d-flex align-items-center mb-3 text-light"> My Interest</h3>
                    @if (Model.user.Interests.Count == 0)
                    {
                         <p class="text-white">No selected interests.</p>}
                    else
                    {
                         @foreach (var interest in Model.user.Interests)
                    {

                    <p class="badge badge-dark">@interest.Interest</p>}}
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript"></script>