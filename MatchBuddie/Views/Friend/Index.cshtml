@model DataLayer.Data.Models.User
@using Microsoft.AspNetCore.Identity

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!--Every view gets the layout from the _ViewStart-->

<script type="text/javascript" src="~/lib/jquery/dist/jquery.min.js"></script>
<div class="py-2">
    <div class="container">
        <h3 class="text-white">Sent requests</h3>
        <div class="card shadow bg-secondary mt-3 mx-2">
            <div class="card-body bg-secondary mx-2">
                <partial name="_SentRequest" model="Model">
            </div>
        </div>

        <h3 class="mt-3 text-white">Received requests</h3>
        <div class="card shadow bg-secondary mt-3 mx-2">
            <div class="card-body bg-secondary mx-2" id="partialViewRecievdRequest">
                <div class="row">
                    <partial name="_ReceivedRequest" model="Model">
                </div>
            </div>
        </div>

        <h3 class="mt-3 text-white">Status on sent requests</h3>
        <div class="card shadow bg-secondary mt-3 mx-2">
            <partial name="_RequestStatus" model="Model">
        </div>
    </div>
</div>
<script type="text/javascript">

    function UpdateReceivedRequestd() {
        $.ajax({
            type: "GET",
            url: "/Friend/UpdateReceivedRequest",
            success: function (data) {

                $("#pvRR").html(data);
                $("#GlobalFriendRequests").html(data);
            }
        });
    }
</script>