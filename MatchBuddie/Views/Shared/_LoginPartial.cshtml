@using Microsoft.AspNetCore.Identity
@using DataLayer.Data.Models;

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
    <li class="nav-item">
        <a class="navbar-brand text-white form-inline" asp-controller="Profile" asp-action="Index">Profile</a>

    </li>
    <li class="nav-item">
        <a class="navbar-brand text-white form-inline" asp-controller="Friend" asp-action="Index">Network</a>
    </li>

    <li class="nav-item">
        <a class="navbar-brand text-white form-inline" asp-controller="ShowcaseUsers" asp-action="Index">Find your buddy</a>
    </li>

    <li class="nav-item">
        <a id="manage" class="nav-link text-white" title="E-mail">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button id="logout" type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li>
    <li class="nav-item">
        <a id="manage" class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Settings</a>
    </li>
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link text-white" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
    }
 </ul>
